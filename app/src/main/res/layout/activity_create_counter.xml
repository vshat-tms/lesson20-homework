<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCounterActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/crate_counter_in_activity"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:text="@string/counter_value_field_name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white">

            <EditText
                android:id="@+id/counter_set_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="@string/value"
                android:background="@drawable/edit_text_style"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="start"
                android:textSize="20sp"
                android:inputType="textAutoCorrect|textCapSentences" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:text="@string/text_color_field_name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white">

            <EditText
                android:id="@+id/color_set_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="@string/text_color_field_values"
                android:background="@drawable/edit_text_style"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="start"
                android:textSize="20sp"
                android:inputType="textAutoCorrect|textCapSentences" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:text="@string/background_color_field_name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white">

            <EditText
                android:id="@+id/background_set_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="@string/background_colro_field_values"
                android:background="@drawable/edit_text_style"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="start"
                android:textSize="20sp"
                android:inputType="textAutoCorrect|textCapSentences" />
        </LinearLayout>

        <TextView
            android:id="@+id/counter_create_error_message"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="30sp"
            android:textColor="@color/error_message_color"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center">

            <Button
                android:id="@+id/createCounterButtonInActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_counter" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>